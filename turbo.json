{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["**/*.{js,jsx,ts,tsx}", "eslint.config.js"],
      "outputs": []
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
