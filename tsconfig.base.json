{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@shared/schemas": ["packages/shared/schemas/src/index.ts"],
      "@shared/schemas/*": ["packages/shared/schemas/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared/schemas" },
    { "path": "./apps/backend" },
    { "path": "./apps/web" },
    { "path": "./apps/parking-synchronizer" }
  ],
  "exclude": ["node_modules", "dist"]
}
